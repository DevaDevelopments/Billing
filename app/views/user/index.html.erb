<%= stylesheet_link_tag :all %>
<%= javascript_include_tag :defaults %>

		
		
		<table class="data display datatable" id="example">
					<thead>
						<tr>
							<th>S.No</th>
							<th>Name</th>
							<th>Email</th>
							<th>Edit</th>
							<th>Delete</th>
						</tr>
					</thead>
					<tbody>
						<% s_no = 0%>
                       <% @user.each do |user|%>
					     <% s_no += 1%>
					     <tr class="<%= cycle("odd gradeX", "even gradeC") %>">
					     	<td><%= s_no %></td>
					     	<td><%= user.name%></td>
							<td><%= user.email%></td>
							<td><%= link_to 'Remove User', user, :confirm => 'Are you sure?', :method => :delete %></td>
							<td><%= link_to 'Edit User', edit_user_path(user) %></td>
					     </tr>
						 
					   <% end %>
					</tbody>
				</table>