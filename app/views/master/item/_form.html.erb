<%= form_for :employee,:url=>{:action=>action},:method=> type,:html => { :class => "form label-inline uniform"} do |f| %>
	<div class="field"><label for="">Item Code </label><%= f.text_field 'item_code', :read_only => false%> </div>
	<div class="field"><label for="">Item Name </label><%= f.text_field 'item_name'%> </div>
	<div class="field"><label for="">Country </label><%= collection_select 'item','catagory_id',{},:id,:name,{:class=>"medium",:prompt=>"Select the Catagory"}%></div>
	<div class="buttonrow">
		<button class="btn btn-black"><%= action_name %></button>
	</div>	
<% end %>	
